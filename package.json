{
  "name": "todo-workspace",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "wsrun build",
    "ws:server": "yarn workspace server",
    "ws:app": "yarn workspace app",
    "dev": "concurrently yarn:dev:*",
    "dev:server": "yarn ws:server dev",
    "dev:app": "wait-on tcp:4000 && yarn ws:app dev",
    "postinstall": "patch-package"
  },
  "prettier": {
    "printWidth": 80,
    "proseWrap": "always",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "concurrently": "^6.0.1",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4",
    "wait-on": "^5.3.0",
    "wsrun": "^5.2.4"
  }
}
